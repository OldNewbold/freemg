<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Preference for entering information -->
    <CheckBoxPreference
        android:key="@string/pref_alert_key"
        android:title="@string/pref_alert_title"
        android:checked="true"
        android:singleLine="true"/>

    <!-- Preference for selecting from a list -->
    <ListPreference
        android:title="@string/pref_muscle_type"
        android:key="@string/pref_muscle_key"
        android:defaultValue="@string/pref_trapezius"
        android:entryValues="@array/MuscleTypes"
        android:entries="@array/MuscleValues"/>
</PreferenceScreen>